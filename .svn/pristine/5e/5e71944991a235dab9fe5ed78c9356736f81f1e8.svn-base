<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>个人中心</title>
    <link rel="stylesheet" href="../css/api.css"/>
    <link rel="stylesheet" href="../css/base.css">
    <link rel="stylesheet" href="../css/frame.css">
    <link rel="stylesheet" href="../css/user_leon.css">    
</head>
<body>
<header id="header" class="index">
    <div class="statusBar"></div>
    <div class="content">
        <i class="return-btn" onclick="closeWindow('user')"></i>
    </div>
</header>
<section>
    <i class="back"></i>
    <div class="min">
        <div class="name">
            <img src="../image/user_pic_leon.jpg">
            <p>felix-w</p>
        </div>
        <ul class="box">
            <li onclick="openWindow('follow',{},'push')">
                <div class="col-l">我关注的营业部</div>
                <div class="col-btn"></div>
            </li>
            <li onclick="openWindow('mynews',{},'push')">
                <div class="col-l con-icon-new">我的消息</div>
                <div class="col-btn"></div>
            </li>
            <li onclick="openWindow('changePwd',{},'push')">
                <div class="col-l con-icon-pwd">密码修改</div>
                <div class="col-btn"></div>
            </li>
            <li onclick="openWindow('about',{},'push')">
                <div class="col-l con-icon-about">关于我们</div>
                <div class="col-btn"></div>
            </li>
        </ul>
        <ul class="box">
            <li>
                <div class="col-l con-icon-app">版本 <span>1.0</span></div>
            </li>
        </ul>
    </div>
    <button class="signout">退出登录</button>
</section>
</body>
<script src="../script/flexible.js"></script>
<script src="../script/zepto.js"></script>
<script src="../script/api.js"></script>
<script src="../script/common.js"></script>
</html>

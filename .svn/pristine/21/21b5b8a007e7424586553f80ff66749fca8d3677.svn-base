@charset "utf-8";
@function s($px){
    @return($px/75)*1rem;
}
/* 头部 底部 */
button,input[type=button],input[type=reset],input[type=submit]{outline:0;-webkit-appearance:none}
textarea{-webkit-appearance:none}
button,input{outline:0;-webkit-appearance:none}
.hover{ opacity: .8; }

.flex-wrap{ display: -webkit-box;	display: -webkit-flex;	display: flex; }
.flex-con{-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;}
.flex-vertical{ -webkit-box-orient: vertical;-webkit-flex-flow: column;flex-flow: column;}

.border-t,
.border-b{ position:relative;  }
.border-t:before,
.border-b:after{     content: '';     position: absolute;     left: 0;  top:0;     background: #ddd;   right:0;    height: 1px;     -webkit-transform: scaleY(0.5);             transform: scaleY(0.5);     -webkit-transform-origin: 0 0;             transform-origin: 0 0; }
.border-b:after{ top:auto; bottom:0;  }
#wrap{ height: 100%; }
.setHeader{
    display: none;
}
header ul li {
  position: relative;
  display: none;
  height: s($px:88);
  line-height: s($px:88);
  background-color: #d3bc89;
  color: #fff;
  text-align: center;
  font-size: s($px:36);
}
header ul li:nth-child(1) {
  display: none;
}

// 底部导航
#footer{
    background-color: #eee;
    z-index: 999;
}

#footer ul li {
  padding-top: 36px;
  padding-bottom: 4px;
  background: no-repeat center 4px;
  background-size: auto 30px;
  color: #666;
  text-align: center;
  font-size: s($px:18)
}


#footer ul li.active {
  color: #6ab494
}

#footer ul li:nth-child(1) {
  background-image: url(../image/index_btn_01.png)
}

#footer ul li:nth-child(2) {
  background-image: url(../image/index_btn_02.png)
}

#footer ul li:nth-child(3) {
  background-image: url(../image/index_btn_03.png)
}

#footer ul li:nth-child(4) {
  background-image: url(../image/index_btn_04.png)
}

#footer ul li:nth-child(5) {
  background-image: url(../image/index_btn_05.png)
}

#footer ul li:nth-child(1).active {
  background-image: url(../image/index_btn_01_active.png)
}

#footer ul li:nth-child(2).active {
  background-image: url(../image/index_btn_02_active.png)
}

#footer ul li:nth-child(3).active {
  background-image: url(../image/index_btn_03_active.png)
}

#footer ul li:nth-child(4).active {
  background-image: url(../image/index_btn_04_active.png)
}

#footer ul li:nth-child(5).active {
  background-image: url(../image/index_btn_05_active.png)
}

#footer ul li.active {
  background-position: center
}

#footer ul li.active span {
  display: none
}

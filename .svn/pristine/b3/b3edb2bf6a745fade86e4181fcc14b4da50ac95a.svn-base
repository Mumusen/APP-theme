@charset "UTF-8";
@function s($px){
  @return($px/75)*1rem;
}
blockquote,body,button,dd,dl,dt,fieldset,form,h1,h2,h3,h4,h5,h6,hr,input,legend,li,ol,p,pre,td,textarea,th,ul {
	margin: 0;
	padding: 0;
	resize:none
}

h1,h2,h3,h4,h5,h6 {
	font-size: 100%;
	font-weight: 400
}

address,cite,dfn,em,i,var,b{
	font-style: normal;
	font-weight: normal;
}

ol,ul {
	list-style: none
}

a,i,input,button,u {
	text-decoration: none;
	outline: 0;
}
input{
  caret-color:red;
}
input::-webkit-input-placeholder {
	color: #666
}

input:focus::-webkit-input-placeholder {
	color: #dedede
}

a:hover {
	text-decoration: none
}

img {
	border: 0
}

table {
	border-collapse: collapse;
	border-spacing: 0
}
input{
	width: 100%;
	-webkit-appearance: none;
	-webkit-appearance: none;
	-webkit-appearance: none;
	appearance: none;
	border-radius: 0;
	padding: 0;
}
body,html {
	// height: 100%;
	// overflow-y: auto;
	font-size: 9pt;
	-webkit-text-size-adjust: 100%;
	-ms-text-size-adjust: 100%;
	font-family: pinfangMedium;
	color: #333
}
.tc{
  text-align: center
}

/* 中等 */
@font-face {
  font-family: 'pinfangMedium';
  src: url("../fonts/PingFangMedium.ttf");
}

/* 粗体 */
@font-face {
  font-family: 'pinfangBold';
  src: url("../fonts/PingFangBold.ttf");
}

/* 常规 */
@font-face {
  font-family: 'pinfangRegular';
  src: url("../fonts/PingFangRegular.ttf");
}

.webkit {
  width: 100%;
  display: -webkit-box;
  -webkit-box-sizing: border-box;
}

.webkit > span {
  -webkit-box-flex: 1;
  width: 100%;
  text-align: center;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-box-pack: center;
  -webkit-box-align: center;
}

.por {
  position: relative;
}

.hot {
  color: #e80618 !important;
}

.hot h4, .hot p, .hot span, .hot u {
  color: #e80618 !important;
}

.hot-bj {
  background-color: #e80618 !important;
}
// 弹窗
.commonAlertBox {
	position: fixed;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	background-color: rgba($color: #000,$alpha: .3)
}

.alertContent {
	position: absolute;
	top: 40%;
	left: 50%;
	margin-left: s($px:-200);
	padding: s($px:36) s($px:30);
	width: s($px:360);
	border-radius: s($px:20);
	background-color: #fff;
	color: #666;
	text-align: center;
	font-size: s($px:32)
}

.signout{
	font-size: s($px:32);
	color: #fff;
	width: s($px:400);
	height: s($px:88);
	line-height: s($px:88);
	border-radius: s($px:44);
	background-color: #d0ba89;
	display: block;
	margin: s($px:600) auto s($px:15);
	box-shadow: 0 s($px:10) s($px:15) rgba($color: #d3bc89, $alpha: .8);
}